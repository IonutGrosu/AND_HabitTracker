<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/profilePicFriendRequestContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_baseline_person_24"
        app:layout_constraintBottom_toBottomOf="@+id/usernameFriendRequestContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/usernameFriendRequestContainer" />

    <TextView
        android:id="@+id/usernameFriendRequestContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/sender_username_request_container_title"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/acceptBtnFriendRequestContainer"
        app:layout_constraintStart_toEndOf="@+id/profilePicFriendRequestContainer"
        app:layout_constraintTop_toTopOf="@+id/acceptBtnFriendRequestContainer" />

    <ImageButton
        android:id="@+id/acceptBtnFriendRequestContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_baseline_check_24"
        app:layout_constraintBottom_toBottomOf="@+id/declineBtnFriendRequestContainer"
        app:layout_constraintEnd_toStartOf="@+id/declineBtnFriendRequestContainer"
        app:layout_constraintTop_toTopOf="@+id/declineBtnFriendRequestContainer" />

    <ImageButton
        android:id="@+id/declineBtnFriendRequestContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_baseline_delete_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>